{
  "name": "Ritoplz",
  "description": "Worldwide Rankings for League of Legends. See who's the best player in your region.",
  "version": "2.0.0",
  "repository": {
    "url": "https://github.com/ritoplz/ritoplz.git",
    "type": "git"
  },
  "author": "Bu Kinoshita <bukinoshita@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development node server",
    "staging": "NODE_ENV=staging node server",
    "build": "next build",
    "start": "NODE_ENV=production node server",
    "precommit": "lint-staged",
    "test": "NODE_ENV=test npm run lint && node_modules/.bin/jest",
    "lint": "node_modules/.bin/xo"
  },
  "dependencies": {
    "axios": "^0.15.2",
    "express": "^4.16.2",
    "goot": "^1.0.0",
    "i18next": "^10.1.0",
    "i18next-browser-languagedetector": "^2.1.0",
    "isomorphic-fetch": "^2.2.1",
    "next": "^4.1.4",
    "next-redux-wrapper": "^1.3.4",
    "next-url-prettifier": "^1.1.5",
    "nprogress": "^0.2.0",
    "prop-types": "^15.6.0",
    "rc-progress": "^2.2.4",
    "react": "^16.1.1",
    "react-addons-css-transition-group": "^15.6.2",
    "react-addons-shallow-compare": "^15.6.2",
    "react-cookies": "^0.1.0",
    "react-dom": "^16.1.1",
    "react-dom-factories": "^1.0.2",
    "react-hash-avatar": "^0.0.2",
    "react-i18next": "^7.0.0",
    "react-infinite-scroller": "^1.1.1",
    "react-redux": "^5.0.6",
    "react-render-html": "^0.6.0",
    "react-s-alert": "^1.3.2",
    "react-selectize": "^3.0.1",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "ritoplz-tier": "^0.0.4",
    "spacetime": "^2.1.2",
    "timeago-react": "^2.0.0"
  },
  "devDependencies": {
    "babel-plugin-transform-define": "^1.3.0",
    "enzyme": "^3.2.0",
    "eslint-config-prettier": "^2.8.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.1.1",
    "redux-logger": "^3.0.6",
    "xo": "^0.18.2"
  },
  "now": {
    "name": "ritoplz",
    "alias": "staging-web.ritoplz.com",
    "env": {
      "NODE_ENV": "staging"
    }
  },
  "babel": {
    "env": {
      "development": {
        "presets": "next/babel",
        "plugins": [
          [
            "transform-define",
            "./env-config.js"
          ]
        ]
      },
      "staging": {
        "presets": "next/babel",
        "plugins": [
          [
            "transform-define",
            "./env-config.js"
          ]
        ]
      },
      "production": {
        "presets": "next/babel",
        "plugins": [
          [
            "transform-define",
            "./env-config.js"
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ],
          "next/babel"
        ],
        "plugins": [
          [
            "transform-define",
            "./env-config.js"
          ]
        ]
      }
    }
  },
  "xo": {
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "space": true,
    "semicolon": false,
    "esnext": true,
    "rules": {
      "react/react-in-jsx-scope": 0,
      "space-before-function-paren": 0,
      "object-curly-spacing": 0,
      "no-implicit-coercion": 0,
      "no-prototype-builtins": 0,
      "array-callback-return": 0,
      "import/no-unassigned-import": 0,
      "import/no-named-as-default-member": 0,
      "react/no-unescaped-entities": 0
    },
    "ignores": [
      "static/*.js",
      "next.config.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --semi false --single-quote --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=7.10.0"
  }
}
