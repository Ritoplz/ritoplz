{
  "name": "Ritoplz",
  "description":
    "Worldwide Rankings for League of Legends. See who's the best player in your region.",
  "version": "3.0.0",
  "repository": {
    "url": "https://github.com/ritoplz/ritoplz.git",
    "type": "git"
  },
  "author": "Bu Kinoshita <bukinoshita@gmail.com>",
  "license": "MIT",
  "keywords": ["league of legends", "LoL", "Rankings", "Ritoplz"],
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "precommit": "lint-staged",
    "test": "xo"
  },
  "dependencies": {
    "next": "^4.2.0-canary.1",
    "nprogress": "^0.2.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1"
  },
  "devDependencies": {
    "eslint-config-prettier": "^2.8.0",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "prop-types": "^15.6.0",
    "xo": "^0.18.2"
  },
  "babel": {
    "presets": ["next/babel"]
  },
  "xo": {
    "extends": ["prettier", "prettier/react", "plugin:react/recommended"],
    "rules": {
      "react/react-in-jsx-scope": 0
    },
    "ignores": ["static/*.js", "next.config.js"]
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --semi false --single-quote --write",
      "git add"
    ]
  },
  "now": {
    "name": "ritoplz",
    "alias": "ritoplz.com",
    "env": {
      "NODE_ENV": "production"
    },
    "dotenv": ".env.production"
  }
}
